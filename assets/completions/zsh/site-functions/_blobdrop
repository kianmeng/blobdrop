#compdef blobdrop

_blobdrop() {
	_arguments '-h[show help]' '-v[show version]' '-f[show frameless window]' '-k[keep dropped files]' '-p[disable autohiding during drag]' '-t[keep window on top]' '-x[autoquit behaviour]:num:((0\:"do not autoquit" 1\:"after first drag" 2\:"after all items have been dragged"))' '::optional arg:_files'
	return 0
}

_blobdrop
